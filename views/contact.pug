extends base.pug

block scripts
  script(src='/Static/index.js')

block style
    style        
      include ../Static/style.css
      include ../Static/contact.css
block content
    div.container
        h1 Contact us
        form(action="/contact" , method="post" , class="myForm")
            input(type="phone", class="myInput", name="phone", placeholder="Enter your Name")
            input(type="email", class="myInput", name="email", placeholder="Enter your Phone no.")
            input(type="text", class="myInput", name="address", placeholder="Enter your Address")
            input(type="text", class="myInput", name="desc", placeholder="Enter your Concern")
            button(class="btn")
                | Submit